        <% } %>

        <div class="table-container">
            <% if (rooms && rooms.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>S·ªë Ph√≤ng</th>
                            <th>Lo·∫°i Ph√≤ng</th>
                            <th>Di·ªán T√≠ch (m¬≤)</th>
                            <th>Gi√° Thu√™</th>
                            <th>ƒê·ªì D√πng</th>
                            <th>H√†nh ƒê·ªông</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% rooms.forEach(room => { %>
                            <tr>
                                <td><strong><%= room.id %></strong></td>
                                <td>
                                    <a href="/rooms/view/<%= room.id %>" style="color: #007bff; text-decoration: none; font-weight: 600;">
                                        <%= room.room_number %>
