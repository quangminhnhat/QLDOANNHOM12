<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <style>
        .modern-container {
            max-width: 800px;
            margin: 48px auto;
            padding: 2.5rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
        }

        .summary-card {
            background: #f9fafb;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 5px solid #2375D8;
        }

        .payment-option {
            border: 1px solid #e3e6ed;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            cursor: pointer;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .payment-option:hover {
            border-color: #2375D8;
            box-shadow: 0 0 0 4px rgba(35, 117, 216, 0.1);
        }

        .modern-form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
        }
        
        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(18px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>

<body>
    <%- include('../shared/header.ejs') %>

    <div class="modern-container">
        <h1 class="modern-title"><i class="fas fa-shopping-cart"></i> Complete Your Booking</h1>

        <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>

        <div class="summary-card">
            <h4 style="font-size: 1.5rem; font-weight: 600; color: #1a202c;">Booking Summary</h4>
            <hr class="my-3">
            <h5>Room: <%= contract.room_number %></h5>
            <p><%= contract.description %></p>
            <ul class="list-unstyled">
                <li><strong>Contract ID:</strong> <%= contract.id %></li>
                <li><strong>Rental Period:</strong> <%= new Date(contract.start_date).toLocaleDateString() %> to <%= new Date(contract.end_date).toLocaleDateString() %></li>
                <li style="font-size: 1.25rem; margin-top: 1rem;">
                    <strong>Total:</strong>
                    <span style="font-weight: 700; color: #2375D8;"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(contract.total_rent) %></span>
                </li>
            </ul>
        </div>

        <h3 style="font-size: 1.5rem; font-weight: 600; color: #1a202c; margin-bottom: 1.5rem;">Choose Payment Method</h3>

        <form action="/renting/pay" method="POST" id="paymentForm">
            <input type="hidden" name="contract_id" value="<%= contract.id %>">
            <input type="hidden" name="payment_method" id="paymentMethodInput" value="">

            <div class="list-group">
                <a href="#" class="payment-option" data-method="cash">
                    <h5><i class="fas fa-money-bill-wave"></i> Pay with Cash</h5>
                    <p>Complete your payment with our staff. Your booking will be confirmed upon payment.</p>
                </a>
                <a href="#" class="payment-option" data-method="card">
                    <h5><i class="fas fa-credit-card"></i> Pay with Credit/Debit Card</h5>
                    <p>Proceed with a secure online payment for immediate confirmation.</p>
                    <div id="card-details" class="mt-3" style="display: none;">
                        <div class="mb-2"><input type="text" id="cardNumber" class="modern-form-control" placeholder="Card Number"></div>
                        <div class="row">
                            <div class="col-md-6 mb-2"><input type="text" id="cardExpiry" class="modern-form-control" placeholder="MM/YY"></div>
                            <div class="col-md-6 mb-2"><input type="text" id="cardCvc" class="modern-form-control" placeholder="CVC"></div>
                        </div>
                        <button type="button" id="pay-by-card-btn" class="modern-btn-primary mt-2">Pay Now</button>
                    </div>
                </a>
            </div>
        </form>
    </div>
    
    <%- include('../shared/footer.ejs') %>

    <script>
        // Scripts from original file
        const paymentForm = document.getElementById('paymentForm');
        const paymentMethodInput = document.getElementById('paymentMethodInput');
        const cardDetails = document.getElementById('card-details');
        const payByCardBtn = document.getElementById('pay-by-card-btn');
        const contractId = '<%= contract.id %>';
        let checkoutCompleted = false;

        document.querySelectorAll('.payment-option').forEach(option => {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                const method = this.dataset.method;
                paymentMethodInput.value = method;

                if (method === 'cash') {
                    checkoutCompleted = true;
                    paymentForm.submit();
                } else if (method === 'card') {
                    cardDetails.style.display = 'block';
                }
            });
        });

        payByCardBtn.addEventListener('click', () => {
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const cardExpiry = document.getElementById('cardExpiry').value.trim();
            const cardCvc = document.getElementById('cardCvc').value.trim();

            if (!cardNumber || !cardExpiry || !cardCvc) {
                alert('Please fill in all card details.');
                return;
            }
            checkoutCompleted = true;
            paymentForm.submit();
        });
        
        paymentForm.addEventListener('submit', () => {
            checkoutCompleted = true;
        });

        window.addEventListener('beforeunload', (event) => {
            if (!checkoutCompleted) {
                navigator.sendBeacon('/renting/cancel-pending', new URLSearchParams({ contract_id: contractId }));
            }
        });
    </script>
</body>
</html>