<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <style>
        .modern-container {
            max-width: 600px;
            margin: 48px auto;
            padding: 2.5rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
        }

        .modern-form-group {
            margin-bottom: 1.5rem;
        }

        .modern-form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
        }
        
        .modern-btn-primary {
            width: 100%;
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(18px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>

<body>
    <%- include('./shared/header.ejs') %>

    <main>
        <div class="modern-container">
            <form action="/register" method="POST" autocomplete="off">
                <h1 class="modern-title"><i class="fas fa-user-plus"></i> Registration</h1>
                
                <div class="modern-form-group">
                    <label for="Name">Username</label>
                    <input type="text" name="Name" class="modern-form-control" id="Name" required>
                </div>
                <div class="modern-form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" name="fullName" class="modern-form-control" id="fullName" required>
                </div>
                <div class="modern-form-group">
                    <label for="birthdayDate">Birthday</label>
                    <input type="date" class="modern-form-control" id="birthdayDate" name="birthday" required>
                </div>
                <div class="modern-form-group">
                    <label for="emailAddress">Email</label>
                    <input type="email" class="modern-form-control" id="emailAddress" name="email" required>
                </div>
                <div class="modern-form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="tel" class="modern-form-control" id="phoneNumber" name="phone" required>
                </div>
                <div class="modern-form-group">
                    <label for="Address">Address</label>
                    <input type="text" class="modern-form-control" id="Address" name="Address" required>
                </div>
                <div class="modern-form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="modern-form-control" id="Password" name="Password" required>
                </div>
                <div class="modern-form-group">
                    <label for="subjectSelect">Account Type</label>
                    <% if (typeof user !=='undefined' && user && user.role==='admin' ) { %>
                    <select class="modern-form-control" id="subjectSelect" name="subject" required>
                        <option value="" disabled selected>Select account type</option>
                        <option value="subject1">Customer</option>
                        <option value="subject2">Employee</option>
                        <option value="subject3">Admin</option>
                    </select>
                    <% } else { %>
                    <input type="text" class="modern-form-control" id="subjectSelect" value="Customer" readonly>
                    <input type="hidden" name="subject" value="subject1">
                    <% } %>
                </div>
                <div class="modern-form-group" id="salaryInput" style="display: none;">
                    <label for="salary">Salary</label>
                    <input type="number" class="modern-form-control" id="salary" name="salary" placeholder="Enter salary">
                </div>
                <button type="submit" class="modern-btn-primary">Submit</button>
            </form>
        </div>
    </main>

    <%- include('./shared/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#subjectSelect').change(function () {
                if ($(this).val() === 'subject2') {
                    $('#salaryInput').show();
                } else {
                    $('#salaryInput').hide();
                }
            });
        });
    </script>
</body>

</html>