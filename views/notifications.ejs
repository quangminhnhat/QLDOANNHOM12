<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css"
        href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">

    <style>
        .modern-container {
            max-width: 1200px;
            margin: 48px auto;
            padding: 2.5rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            margin-bottom: 2rem;
        }

        .modern-table {
            width: 100% !important;
            border-collapse: collapse;
        }

        .modern-table th,
        .modern-table td {
            padding: 1rem 1.2rem;
            text-align: left;
        }

        .modern-table th {
            background: #2375D8;
            color: #fff;
            font-weight: 600;
        }

        .modern-table tbody tr:hover {
            background: #e6f0fa;
        }

        .modern-table td {
            border-bottom: 1px solid #e3e6ed;
        }

        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            text-decoration: none;
        }
        
        .modern-form-card {
            background: #f7fafc;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .modern-form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('./shared/header.ejs') %>

    <main>
        <div class="modern-container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h1 class="modern-title"><i class="fas fa-bell"></i> Notifications</h1>
                <% if (user.role === 'admin' || user.role === 'teacher') { %>
                <a href="#sendNotificationCard" class="modern-btn-primary"
                    onclick="document.getElementById('sendNotificationCard').scrollIntoView({behavior:'smooth'});return false;">
                    <i class="fas fa-paper-plane"></i> Send Notification
                </a>
                <% } %>
            </div>

            <% if (user.role === 'admin' || user.role === 'teacher') { %>
            <div id="sendNotificationCard" class="modern-form-card">
                <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem;">Send a New Notification</h2>
                <form action="/notifications" method="POST" style="display: flex; gap: 1rem; align-items: flex-end;">
                    <div style="flex-grow: 1;">
                        <label for="userId">To User</label>
                        <select name="userId" id="userId" class="modern-form-control" required>
                            <option value="">Select a user...</option>
                            <% users && users.forEach(u => { %>
                            <option value="<%= u.id %>"><%= u.full_name %> (<%= u.email %>)</option>
                            <% }) %>
                        </select>
                    </div>
                    <div style="flex-grow: 2;">
                        <label for="message">Message</label>
                        <input type="text" name="message" id="message" class="modern-form-control" required
                            placeholder="Enter your notification message...">
                    </div>
                    <button type="submit" class="modern-btn-primary" style="height: fit-content;">Send</button>
                </form>
            </div>
            <% } %>

            <table id="notificationsTable" class="modern-table display responsive nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Message</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% notifications.forEach(notification => { %>
                    <tr>
                        <td><%= notification.id %></td>
                        <td><%= notification.sender_name %></td>
                        <td><%= notification.receiver_name %></td>
                        <td><%= notification.message %></td>
                        <td><%= new Date(notification.created_at).toLocaleString() %></td>
                        <td data-id="<%= notification.id %>" class="<%= !notification.read ? 'unread-notification' : '' %>">
                            <% if(notification.read) { %>
                            <span style="padding: 0.25rem 0.5rem; border-radius: 9999px; color: #fff; background-color: #22c55e;">Read</span>
                            <% } else { %>
                            <span style="padding: 0.25rem 0.5rem; border-radius: 9999px; color: #fff; background-color: #f59e0b;">Unread</span>
                            <% } %>
                        </td>
                        <td>
                            <form method="POST" action="/notifications/<%= notification.id %>?_method=DELETE"
                                onsubmit="return confirm('Are you sure you want to delete this notification?');">
                                <button type="submit" title="Delete" style="background: none; border: none; color: #ef4444; cursor: pointer;"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('./shared/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#notificationsTable').DataTable({
                responsive: true,
                order: [[0, 'desc']],
            });

            $('#notificationsTable tbody').on('click', '.unread-notification', function () {
                const notificationId = $(this).data('id');
                const statusCell = $(this);

                $.post(`/notifications/${notificationId}/read`)
                    .done(function () {
                        statusCell.find('span')
                            .css('background-color', '#22c55e')
                            .text('Read');
                        statusCell.removeClass('unread-notification');
                    })
                    .fail(function (err) {
                        console.error('Error marking notification as read:', err);
                        alert('Failed to mark notification as read');
                    });
            });
        });
    </script>
</body>

</html>