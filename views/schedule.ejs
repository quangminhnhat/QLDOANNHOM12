<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Weekly Schedule</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
    <style>
        .modern-container {
            max-width: 1200px;
            margin: 48px auto;
            padding: 2.5rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            margin-bottom: 2rem;
        }

        .modern-table {
            width: 100%;
            border-collapse: collapse;
        }

        .modern-table th,
        .modern-table td {
            padding: 1rem;
            text-align: center;
        }

        .modern-table th {
            background: #2375D8;
            color: #fff;
            font-weight: 600;
        }

        .modern-table td {
            border: 1px solid #e3e6ed;
        }
        
        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            text-decoration: none;
        }
        
        .modern-btn-secondary {
            background-color: #e2e8f0;
            color: #4a5568;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            text-decoration: none;
        }
        
        .modern-class-card {
            border-left: 4px solid #2375D8;
            background: #e6f0fa;
            border-radius: 8px;
            padding: 0.5rem 0.7rem;
            margin-bottom: 0.2rem;
            text-align: left;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('./shared/header.ejs') %>

    <main>
        <div class="modern-container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h1 class="modern-title"><i class="fas fa-calendar-alt"></i> Weekly Schedule</h1>
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <a href="/schedule" class="modern-btn-primary">Current Week</a>
                    <a href="/schedule?weekStart=<%= prevWeekStart %>" class="modern-btn-secondary">&lt;</a>
                    <span>Week: <%= days[0].date %> â€“ <%= days[6].date %></span>
                    <a href="/schedule?weekStart=<%= nextWeekStart %>" class="modern-btn-secondary">&gt;</a>
                </div>
            </div>

            <div style="overflow-x: auto; margin-top: 2rem;">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Period</th>
                            <% days.forEach(function(day) { %>
                            <th><%= day.name %><br><span><%= day.date %></span></th>
                            <% }); %>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let period = 1; period <= 15; period++) { %>
                        <tr>
                            <td>Period <%= period %></td>
                            <% days.forEach((day) => { %>
                            <td>
                                <% const dayClasses = scheduleData.filter(cls => cls.date === day.iso && cls.startPeriod <= period && cls.endPeriod >= period); %>
                                <% if (dayClasses.length > 0) { %>
                                    <div class="modern-class-card">
                                        <div><strong><%= dayClasses[0].courseName %></strong></div>
                                        <div><%= dayClasses[0].className %></div>
                                        <% if (dayClasses[0].teacher) { %>
                                        <div><small><%= dayClasses[0].teacher %></small></div>
                                        <% } %>
                                    </div>
                                <% } %>
                            </td>
                            <% }); %>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <%- include('./shared/footer.ejs') %>
</body>

</html>