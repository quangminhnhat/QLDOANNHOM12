<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Room</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #f8f9fa;
        }

        main,
        .modern-container {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

        .modern-container {
            max-width: 900px;
            margin: 48px auto 0 auto;
            padding: 2.5rem;
            background: #ffffff;
            border-radius: 24px;
            box-shadow: 0 8px 32px rgba(35, 117, 216, 0.1);
            border: 1px solid #dbeeff;
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }

        .modern-form-group {
            margin-bottom: 1.5rem;
        }

        .modern-form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #4a5568;
        }

        .modern-form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .modern-form-control:focus {
            outline: none;
            border-color: #2375D8;
            box-shadow: 0 0 0 4px rgba(35, 117, 216, 0.1);
        }

        .modern-btn-primary {
            width: 100%;
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.85rem 0;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(36, 117, 216, 0.1);
            transition: background 0.2s, transform 0.15s;
            cursor: pointer;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.7rem;
        }

        .modern-btn-primary:hover {
            background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(36, 117, 216, 0.18);
        }

        .modern-btn-secondary {
            width: 100%;
            background: #e2e8f0;
            color: #4a5568;
            font-weight: 600;
            font-size: 1.1rem;
            padding: 0.85rem 0;
            border: none;
            border-radius: 10px;
            transition: background 0.2s, color 0.2s;
            cursor: pointer;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.7rem;
            text-decoration: none;
            text-align: center;
        }

        .modern-btn-secondary:hover {
            background: #cbd5e0;
            color: #2375D8;
        }
        
        .modern-form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .furniture-section {
            margin-top: 2rem;
            padding: 1.5rem;
            border-radius: 12px;
            background: #f9fafb;
            border: 1px solid #e3e6ed;
        }

        .furniture-row {
            display: grid;
            grid-template-columns: 1fr 1fr 120px;
            gap: 1rem;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .btn-remove {
            background-color: #ef4444;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.2s;
            text-align: center;
        }
        .btn-remove:hover {
            background-color: #b91c1c;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('../shared/header') %>

    <main>
        <div class="modern-container">
            <div class="modern-title">
                <i class="fas fa-plus-circle"></i> Add New Room
            </div>

            <% if (message) { %>
            <div class="alert alert-<%= messageType %>">
                <%= message %>
            </div>
            <% } %>

            <form action="/rooms/add" method="POST">
                <div class="modern-form-group">
                    <label for="room_number">Room Number</label>
                    <input type="text" class="modern-form-control" id="room_number" name="room_number" required>
                </div>
                <div class="modern-form-group">
                    <label for="room_type">Room Type</label>
                    <select class="modern-form-control" id="room_type" name="room_type" required>
                        <option value="phòng tự học">Phòng tự học</option>
                        <option value="phòng lab">Phòng lab</option>
                    </select>
                </div>
                <div class="modern-form-row">
                    <div class="modern-form-group">
                        <label for="size_sqm">Size (m²)</label>
                        <input type="number" step="0.1" class="modern-form-control" id="size_sqm" name="size_sqm" min="0">
                    </div>
                    <div class="modern-form-group">
                        <label for="rent_price">Rent Price (VND)</label>
                        <input type="number" class="modern-form-control" id="rent_price" name="rent_price" min="0" required>
                    </div>
                </div>
                <div class="modern-form-group">
                    <label for="description">Description</label>
                    <textarea class="modern-form-control" id="description" name="description" rows="3"></textarea>
                </div>

                <div class="furniture-section">
                    <h3 style="font-size: 1.4rem; font-weight: 600; color: #374151; margin-bottom: 1rem;">Manage Furniture</h3>
                    <div id="furniture-container">
                        <!-- Dynamic furniture rows will be added here -->
                    </div>
                    <button type="button" id="add-furniture-btn" class="modern-btn-secondary" style="width: auto; padding: 0.6rem 1.5rem;">
                        <i class="fas fa-plus"></i> Add Furniture
                    </button>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <a href="/rooms/list" class="modern-btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="modern-btn-primary">
                        <i class="fas fa-save"></i> Save Room
                    </button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../shared/footer.ejs') %>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const allFurniture = <%- JSON.stringify(allFurniture) %>;
            const container = document.getElementById('furniture-container');
            const addBtn = document.getElementById('add-furniture-btn');

            let furnitureCounter = 0;

            function createFurnitureRow() {
                const rowId = `furniture-row-${furnitureCounter++}`;
                const row = document.createElement('div');
                row.className = 'furniture-row';
                row.id = rowId;

                let optionsHtml = '<option value="">Select Furniture...</option>';
                allFurniture.forEach(f => {
                    optionsHtml += `<option value="${f.id}">${f.name}</option>`;
                });

                row.innerHTML = `
                    <select class="modern-form-control" name="furniture_ids[]" required>
                        ${optionsHtml}
                    </select>
                    <input type="number" class="modern-form-control" name="quantities[]" placeholder="Quantity" value="1" min="1" required>
                    <button type="button" class="btn-remove" onclick="document.getElementById('${rowId}').remove()">
                        <i class="fas fa-trash-alt"></i> Remove
                    </button>
                `;
                container.appendChild(row);
            }

            addBtn.addEventListener('click', createFurnitureRow);
        });
    </script>
</body>

</html>