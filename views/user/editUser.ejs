<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
    <style>
        .modern-container {
            max-width: 800px;
            margin: 48px auto;
            padding: 2.5rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            margin-bottom: 2rem;
        }
        
        .modern-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f7fafc;
            border-radius: 10px;
        }
        
        .modern-form-group {
            margin-bottom: 1.5rem;
        }

        .modern-form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
        }

        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }
        
        .modern-btn-secondary {
            background-color: #e2e8f0;
            color: #4a5568;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 10px;
            text-decoration: none;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(18px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>

<body>
    <%- include('../shared/header.ejs') %>

    <div class="modern-container">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h1 class="modern-title">Edit User</h1>
            <% if (user.role === 'admin' && user.id !== editUser.id) { %>
                <a href="/users" class="modern-btn-secondary">Back to Users</a>
            <% } else { %>
                <a href="/profile" class="modern-btn-secondary">View Profile</a>
            <% } %>
        </div>

        <% if (locals.messages && messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger"><%= messages.error[0] %></div>
        <% } %>
        <% if (locals.messages && messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success"><%= messages.success[0] %></div>
        <% } %>

        <form action="/users/<%= editUser.id %>" method="POST" enctype="multipart/form-data">
            <div class="modern-section">
                <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem;">Profile Picture</h2>
                <div style="display: flex; align-items: center; gap: 1rem;">
                    <img 
                        src="<%= editUser.profile_pic ? '/' + editUser.profile_pic.replace(/\\/g, '/') : '/uploads/profile_pic/default_profile_pic.png' %>" 
                        alt="Profile Picture" 
                        style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;">
                    <input type="file" name="profile_pic" id="profile_pic" class="modern-form-control">
                </div>
            </div>

            <div class="modern-section">
                <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem;">Account Information</h2>
                <div class="modern-form-group">
                    <label>Username</label>
                    <input type="text" name="username" value="<%= editUser.username %>" required class="modern-form-control">
                </div>
                <div class="modern-form-group">
                    <label>Role</label>
                    <select name="role" class="modern-form-control" <%= (user.role !== 'admin' && user.id === editUser.id) ? 'disabled' : '' %>>
                        <option value="student" <%= editUser.role === 'student' ? 'selected' : '' %>>Student</option>
                        <option value="teacher" <%= editUser.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
                        <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %> <%= user.role !== 'admin' ? 'disabled' : '' %>>Admin</option>
                    </select>
                </div>
            </div>
            
            <div class="modern-section">
                <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem;">Personal Information</h2>
                <div class="modern-form-group">
                    <label>Full Name</label>
                    <input type="text" name="full_name" value="<%= editUser.full_name %>" required class="modern-form-control">
                </div>
                <div class="modern-form-group">
                    <label>Email</label>
                    <input type="email" name="email" value="<%= editUser.email %>" required class="modern-form-control">
                </div>
                <div class="modern-form-group">
                    <label>Phone Number</label>
                    <input type="text" name="phone_number" value="<%= editUser.phone_number %>" required class="modern-form-control">
                </div>
            </div>

            <div style="display: flex; justify-content: flex-end; margin-top: 2rem;">
                <button type="submit" class="modern-btn-primary">Save Changes</button>
            </div>
        </form>
    </div>

    <%- include('../shared/footer.ejs') %>
</body>