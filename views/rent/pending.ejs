<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Cash Payments</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('../shared/header.ejs') %>

    <div class="container mt-5">
        <h1 class="mb-4">Pending Cash Payments</h1>

        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>

        <% if (payments && payments.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Payment ID</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Room</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% payments.forEach(payment => { %>
                            <tr>
                                <td>#<%= payment.payment_id %></td>
                                <td><%= payment.full_name %></td>
                                <td><%= payment.room_number %></td>
                                <td><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(payment.amount) %></td>
                                <td><%= new Date(payment.payment_date).toLocaleString() %></td>
                                <td>
                                    <form action="/renting/confirm-payment/<%= payment.payment_id %>" method="POST" onsubmit="return confirm('Are you sure you want to confirm this payment?');">
                                        <button type="submit" class="btn btn-sm btn-success">Confirm Payment</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center p-5 border rounded bg-light">
                <h4>No Pending Payments</h4>
                <p>There are currently no pending cash payments to confirm.</p>
            </div>
        <% } %>
    </div>

</body>
</html>