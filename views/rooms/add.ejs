<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Phòng Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../shared/header.ejs') %>


    <div class="container mt-5">
        <h1 class="mb-4">Add New Room</h1>

        <% if (message) { %>
            <div class="alert alert-<%= messageType %>"><%= message %></div>
        <% } %>

        <form action="/rooms/add" method="POST">
            <div class="card">
                <div class="card-header">Room Details</div>
                <div class="card-body">
                    <div class="mb-3"> 
                        <label for="room_number" class="form-label">Room Number</label>
                        <input type="text" class="form-control" id="room_number" name="room_number" required>
                    </div>
                    <div class="mb-3">
                        <label for="room_type" class="form-label">Room Type</label>
                        <select class="form-select" id="room_type" name="room_type" required>
                            <option value="phòng tự học">Phòng tự học</option>
                            <option value="phòng lab">Phòng lab</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="size_sqm" class="form-label">Size (m²)</label>
                            <input type="number" step="0.1" class="form-control" id="size_sqm" name="size_sqm" min="0">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="rent_price" class="form-label">Rent Price (VND)</label>
                            <input type="number" class="form-control" id="rent_price" name="rent_price" min="0" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">Manage Furniture</div>
                <div class="card-body">
                    <div id="furniture-container">
                        <!-- Dynamic furniture rows will be added here -->
                    </div>
                    <button type="button" id="add-furniture-btn" class="btn btn-outline-primary mt-2">Add Furniture</button>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save Room</button>
                <a href="/rooms/list" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const allFurniture = <%- JSON.stringify(allFurniture) %>;
            const container = document.getElementById('furniture-container');
            const addBtn = document.getElementById('add-furniture-btn');

            let furnitureCounter = 0;

            function createFurnitureRow() {
                const rowId = `furniture-row-${furnitureCounter++}`;
                const row = document.createElement('div');
                row.className = 'row mb-2 align-items-center';
                row.id = rowId;

                let optionsHtml = '<option value="">Select Furniture...</option>';
                allFurniture.forEach(f => {
                    optionsHtml += `<option value="${f.id}">${f.name}</option>`;
                });

                row.innerHTML = `
                    <div class="col-md-5">
                        <select class="form-select" name="furniture_ids[]" required>
                            ${optionsHtml}
                        </select>
                    </div>
                    <div class="col-md-5">
                        <input type="number" class="form-control" name="quantities[]" placeholder="Quantity" value="1" min="1" required>
                    </div>
                    <div class="col-md-2 text-end">
                        <button type="button" class="btn btn-danger btn-sm" onclick="document.getElementById('${rowId}').remove()">Remove</button>
                    </div>
                `;
                container.appendChild(row);
            }

            addBtn.addEventListener('click', createFurnitureRow);
        });
    </script>
</body>
</html>
