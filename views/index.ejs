      <!-- items lish-->
      <div class="slider-wrapper swiper-wrapper">
        <div class="slider-item swiper-slide">
          <div class="slide-content">
            <h2 class="slide-title"></h2>
            <p class="slide-description"></p>
          </div>
        </div>
        <div class="slider-item swiper-slide">
          <div class="slide-content">
            <h3 class="slide-subtitle"></h3>
          </div>
        </div>
        <div class="slider-item swiper-slide">
          <div class="slide-content">
            <h3 class="slide-subtitle"></h3>
          </div>
        </div>
        <div class="slider-item swiper-slide">
          <div class="slide-content">
            <h3 class="slide-subtitle"></h3>
          </div>
        </div>
        <div class="slider-item swiper-slide">
          <div class="slide-content">
            <h3 class="slide-subtitle"></h3>
          </div>
        </div>
      </div>
      <!-- slide button-->
      <div class="slider-controls">


      </div>
    </div>
    <!-- Teacher Slider Section -->
    <div class="modern-container">
    <h1 class="modern-title"><i class="fas fa-person-shelter"></i> Available Rooms for Rent</h1>

    <% if (messages.error) { %>
    <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>

    <div class="room-grid">
      <% if (rooms && rooms.length > 0) { %> <% rooms.forEach(room => { %>
      <div class="room-card">
        <div class="card-content">
          <h5 class="card-title"><%= room.room_number %></h5>
          <h6 class="card-subtitle"><%= room.room_type %></h6>
          <p class="card-description"><%= room.description %></p>
          <% if (room.furniture_list) { %>
          <p><small><strong>Includes:</strong> <%= room.furniture_list %></small></p>
          <% } %>
          <div class="card-footer">
            <p class="price">
              <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(room.rent_price) %>
            </p>
            <a href="/renting/new?room_id=<%= room.id %>" class="modern-btn-primary">Rent Now</a>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <p>There are no available rooms at the moment. Please check back later.</p>
      <% } %>
    </div>
  </div>
    


